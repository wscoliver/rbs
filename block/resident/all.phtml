     +"<span class = 'p_del_button' onclick='del(\""+matric+"\",\""+a+"\")'>Delete</span></td>";

     //Append the Node
     tr_node.innerHTML = node_val;
     tr_node.id = 'rbs_res_'+a;
     document.getElementById('rbs_res').appendChild(tr_node);
     //Fill with input values
