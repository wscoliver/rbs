function clearRes(){
   var tb = document.getElementById('rbs_res');
 while( tb.lastChild && tb.lastChild.id != 'rbs_head'){
     tb.removeChild(tb.lastChild);
   }

}
/*----------------------
*
*nextPage and prevPage Function
----------------------*/ 
function nextPage(){
clearRes();
//Get the changed variables
cur_page++;
get_resident();
}
function prevPage(){
