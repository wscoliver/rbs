     //Show next button
     page_val +="<td><span onclick='nextPage()'>Next</span></td>";
     }
     else{
     page_val +="<td></td>";
     }

     if( cur_page > 1){
     page_val +="<td><span onclick='prevPage()'>Prev</span></td>";
     }
     else{
     page_val +="<td></td>";
     }

     page_node.innerHTML = page_val;
     document.getElementById('rbs_res').appendChild(page_node);  
   }
   page_row();
  });
}
